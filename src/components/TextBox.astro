---
interface Props {
	title: string
}

const { title } = Astro.props
---

<h2 class="font-serif text-4xl font-semibold italic md:text-5xl">{title}</h2>
<div class="relative grid gap-6 pt-12 font-medium">
	<span class="absolute -left-10 -top-6 bottom-0 animate-parallax-t border-l-8 border-yellow-300"></span>
	<slot />
</div>
